{
  "name": "sentence-collector-web",
  "version": "0.0.1",
  "description": "A web console for collecting and validating sentences",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "./node_modules/webpack/bin/webpack.js --watch --mode development",
    "build": "./node_modules/webpack/bin/webpack.js --mode production",
    "lint": "eslint src",
    "test": "npm run lint && npm run check:format && jest",
    "test:unit": "jest",
    "check:format": "npx prettier --check .",
    "format": "npx prettier --write ."
  },
  "dependencies": {
    "@fluent/bundle": "^0.17.0",
    "@fluent/langneg": "^0.6.0",
    "@fluent/react": "^0.14.0",
    "connected-react-router": "^6.9.1",
    "hammerjs": "^2.0.8",
    "iso-639-1": "^2.1.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-tinder-card": "^1.4.0",
    "redux": "^4.1.1",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^2.3.0",
    "regenerator-runtime": "^0.13.9"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-react": "^7.14.5",
    "@babel/runtime": "^7.14.8",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/history": "^4.7.9",
    "@types/jest": "^26.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/react-redux": "^7.1.18",
    "@types/react-router-dom": "^5.1.8",
    "@types/regenerator-runtime": "^0.13.1",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "babel-preset-env": "^1.7.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.2.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-react": "^7.24.0",
    "file-loader": "^6.2.0",
    "jest": "^27.0.6",
    "jest-fetch-mock": "^3.0.3",
    "mini-css-extract-plugin": "^2.2.0",
    "prettier": "2.3.2",
    "react-test-renderer": "^17.0.2",
    "redux-mock-store": "^1.5.3",
    "style-loader": "^3.2.1",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.5",
    "typescript": "^4.3.5",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/coverage/**",
      "!**/dist/**",
      "!**/node_modules/**",
      "!**/tests/**",
      "!webpack.config.js",
      "!**/src/index.tsx",
      "!**/src/app.tsx",
      "!**/src/l10n.tsx"
    ],
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 85,
        "lines": 95,
        "statements": 95
      }
    },
    "preset": "ts-jest",
    "resetMocks": false,
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js?$": "babel-jest",
      "^.+\\.ts?$": "ts-jest",
      "\\.svg$|\\.css$": "<rootDir>/tests/file-transformer.ts"
    },
    "setupFiles": [
      "./tests/setup.ts"
    ]
  }
}
